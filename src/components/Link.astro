---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
}

const { href, external, underline = true, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn("inline-block decoration-neutral-400/30 dark:decoration-neutral-500/30 hover:decoration-neutral-400/50 hover:dark:decoration-neutral-500/50 text-current hover:text-neutral-900 hover:dark:text-neutral-50 transition-all duration-300 ease-in-out", underline && "underline underline-offset-2")}
  {...rest}>
  <slot/>
</a>
