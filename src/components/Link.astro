---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  class?: string;
}

const { href, external, underline = true, class: className, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn(
    "inline-block decoration-purple-400/30 dark:decoration-purple-300/30 hover:decoration-purple-500/50 hover:dark:decoration-purple-200/50 text-current hover:text-purple-800 hover:dark:text-purple-200 transition-all duration-300 ease-in-out",
    underline && "underline underline-offset-2",
    className
  )}
  {...rest}>
  <slot/>
</a>
