---
import Analytics from "@vercel/analytics/astro";
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";
import "../styles/project.css";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Head title={`${title} | ${SITE.NAME}`} description={description} />
    <style>
      .screenshot-container img {
        max-width: 300px;
        height: auto;
        display: block;
        margin: 2rem auto;
      }

      .screenshot-container em {
        display: block;
        text-align: center;
        margin: 1rem 0 2rem;
        font-style: italic;
        color: #666;
      }

      .video-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 2rem 0;
      }

      .video-container video {
        max-width: 300px;
        width: 100%;
        height: auto;
        margin: 1rem auto;
      }

      .video-container em {
        display: block;
        text-align: center;
        margin: 1rem 0;
        font-style: italic;
        color: #666;
        max-width: 600px;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <Analytics />
  </body>
</html>
